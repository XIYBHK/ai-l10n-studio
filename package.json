{
  "name": "po-translator-gui",
  "version": "1.0.0",
  "description": "PO文件AI翻译工具 - Tauri版本",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:portable": "node scripts/portable.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:ci": "vitest run --reporter=dot --silent",
    "test:coverage": "vitest run --coverage",
    "test:backend": "cd src-tauri && cargo nextest run --lib",
    "test:backend:all": "cd src-tauri && cargo nextest run",
    "test:backend:watch": "cd src-tauri && cargo watch -x 'nextest run --lib'",
    "test:all": "npm run test:run && npm run test:backend",
    "i18n:check": "node scripts/check-unused-i18n.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fmt": "cargo fmt --manifest-path ./src-tauri/Cargo.toml",
    "lint:all": "npm run format:check && npm run fmt -- --check"
  },
  "dependencies": {
    "@ant-design/icons": "^5.6.1",
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-dialog": "^2.4.0",
    "@tauri-apps/plugin-fs": "^2.4.2",
    "@tauri-apps/plugin-notification": "^2.3.1",
    "@tauri-apps/plugin-store": "^2.4.0",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "@types/lodash": "^4.17.20",
    "@vitejs/plugin-react": "^5.0.4",
    "antd": "^5.12.0",
    "i18next": "^25.5.3",
    "immer": "^10.0.3",
    "lodash": "^4.17.21",
    "nanoid": "^5.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.5.0",
    "react-i18next": "^16.0.0",
    "react-window": "^2.2.0",
    "react-window-infinite-loader": "^2.0.0",
    "swr": "^2.2.5",
    "vite-plugin-tauri": "^4.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-window": "^1.8.8",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "adm-zip": "^0.5.16",
    "happy-dom": "^20.0.7",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  }
}
